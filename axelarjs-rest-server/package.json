{
  "name": "@axelar-network/axelarjs-rest-server",
  "version": "1.0.2",
  "description": "The rest server interface for the Axelar Network",
  "main": "dist/index.js",
  "scripts": {
    "tsc": "tsc -p .",
    "local:tsc-watch": "tsc --watch -p .",
    "local:serve-watch": "DOTENV_CONFIG_PATH=.env.local nodemon -r dotenv/config -e js -w dist dist/index.js",
    "local-dev": "run-p local:*",
    "container:tsc-watch": "tsc --watch -p .",
    "container:serve-watch": "DOTENV_CONFIG_PATH=.env.container nodemon -r dotenv/config -e js -w dist dist/index.js",
    "container-dev": "run-p container:*",
    "devnet:tsc": "tsc -p .",
    "devnet:serve": "DOTENV_CONFIG_PATH=.env.devnet node -r dotenv/config dist dist/index.js",
    "devnet": "run-p devnet:*",
    "testnet:tsc": "tsc -p .",
    "testnet:serve":  "DOTENV_CONFIG_PATH=.env.testnet node -r dotenv/config dist dist/index.js",
    "testnet": "run-p testnet:*",
    "build-and-run-once-locally": "tsc && node dist/index.js",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.test.ts",
    "build": "npm run devnet:tsc",
    "start": "npm run devnet:serve"
  },
  "keywords": [
    "axelar",
    "blockchain",
    "cryptocurrency",
    "interoperability",
    "smart-contracts"
  ],
  "author": "Axelar Network",
  "license": "MIT",
  "dependencies": {
    "@axelar-network/axelarjs-sdk": "^1.0.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.1.5",
    "@types/boom": "^7.3.1",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "axios": "^0.23.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethers": "^5.4.7",
    "hapi-k8s-health": "^1.1.1",
    "mocha": "^9.1.1",
    "socket.io": "^4.2.0",
    "ts-node": "^10.2.1"
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/hapi__hapi": "^20.0.9",
    "@types/node": "^16.7.13",
    "@types/ws": "^7.4.7",
    "events": "^3.3.0",
    "jscrypto": "^1.0.2",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.4.2",
    "ws": "^8.2.2"
  }
}
